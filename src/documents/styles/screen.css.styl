@import 'nib'

@font-face
  font-family: 'ProstoOne-Regular'
  font-style: normal
  font-weight: 400
  src: local('ProstoOne-Regular'), url(fonts/ProstoOne-Regular.ttf) format('truetype')

html, body
  padding: 0
  margin: 0
  height: 100%
  width: 100%

body
  background-attachment: fixed
  background-position: top center
  background-repeat: no-repeat
  background-size: cover

#content
  text-align: center
  width: 20em
  height: 14em
  padding: 1em 0
  margin: -8em 0 0 -10em;
  position: relative
  top: 50%
  left: 50%

  color: white
  background-color: rgba(0, 0, 0, .6)
  font-family: 'ProstoOne-Regular', cursive

  strong
    display: block
    font-size: 1.2em
    color: #f5ff00

  a
    background-color: #f5ff00
    color: rgba(1, 1, 1, .6)
    text-decoration: none
    padding: .5em 1em
    border-radius: .2em

    &:hover
      background-color: #00fff5

#footer
  color: white
  position: absolute
  bottom: 0
  height: 1.5em
  padding: .25em 0
  width: 100%
  background-color: rgba(0, 0, 0, .6)

  #left
    width: 36%
    float: left
    text-align: left
    position: relative
    padding: 2px 2%
    font-family: sans
    font-size: .8em
    font-weight: bold

    a
      color: #f5ff00
      text-decoration: none

      &:hover
        color: #00fff5

  #right
    width: 60%
    float: right
    text-align: right

    div
      display: inline-block
      padding: 0 1em
