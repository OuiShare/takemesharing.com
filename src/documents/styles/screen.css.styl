@import 'nib'

@font-face
  font-family: 'ProstoOne-Regular'
  font-style: normal
  font-weight: 400
  src: local('ProstoOne-Regular'), url(fonts/ProstoOne-Regular.ttf) format('truetype')

html, body
  padding: 0
  margin: 0
  height: 100%
  width: 100%

body
  background-attachment: fixed
  background-image: url(/images/3264112407_cfec69fb49_o.jpg)
  background-position: top center
  background-repeat: no-repeat
  background-size: cover

#content
  text-align: center
  width: 20em
  height: 14em
  padding: 1em 0
  margin: -8em 0 0 -10em;
  position: relative
  top: 50%
  left: 50%

  color: white
  background-color: rgba(0, 0, 0, .6)
  font-family: 'ProstoOne-Regular', cursive

strong
  display: block
  font-size: 1.2em
  color: #f5ff00

a
  background-color: #f5ff00
  color: rgba(1, 1, 1, .6)
  text-decoration: none
  padding: .5em 1em
  border-radius: .2em

  &:hover
    background-color: #00fff5
